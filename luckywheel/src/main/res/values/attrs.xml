<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LuckyWheelView">

        <attr name="arrowPosition" format="enum">
            <enum name="TOP" value="1" />
            <enum name="CENTER" value="2" />
        </attr>

        <attr name="arrowAnimationEnable" format="boolean" />
        <attr name="arrowSwingDuration" format="integer" />
        <attr name="arrowSwingDistance" format="float" />
        <attr name="arrowSwingSlowdownMultiplier" format="float" />

        <attr name="wheelTopArrow" format="reference" />
        <attr name="wheelTopArrowWidth" format="dimension" />
        <attr name="wheelTopArrowHeight" format="dimension" />
        <attr name="wheelTopArrowColor" format="color" />
        <attr name="wheelTopArrowMargin" format="dimension" />

        <attr name="wheelCenterImage" format="reference" />
        <attr name="wheelCenterImageWidth" format="dimension" />
        <attr name="wheelCenterImageHeight" format="dimension" />

        <attr name="wheelCenterArrow" format="reference" />
        <attr name="wheelCenterArrowWidth" format="dimension" />
        <attr name="wheelCenterArrowHeight" format="dimension" />
        <attr name="wheelCenterArrowColor" format="color" />
        <attr name="wheelCenterArrowMarginTop" format="dimension" />
        <attr name="wheelCenterArrowMarginBottom" format="dimension" />

        <attr name="wheelCenterText" format="string" />
        <attr name="wheelCenterTextColor" format="color" />
        <attr name="wheelCenterTextSize" format="dimension" />
        <attr name="wheelCenterTextFont" format="reference" />

        <attr name="rotateDirection" format="enum">
            <enum name="CLOCKWISE" value="1" />
            <enum name="COUNTER_CLOCKWISE" value="2" />
        </attr>
        
        <attr name="rotationViaSwipe" format="boolean" />
        <attr name="swipeDistance" format="integer" />

        <attr name="stopCenterOfItem" format="boolean" />

        <attr name="rotateTime" format="integer" />
        <attr name="rotateSpeed" format="enum">
            <enum name="FAST" value="15" />
            <enum name="NORMAL" value="10" />
            <enum name="SLOW" value="5" />
        </attr>
        <attr name="rotateSpeedMultiplier" format="float" />

        <attr name="drawWheelStroke" format="boolean" />
        <attr name="wheelStrokeColor" format="color" />
        <attr name="wheelStrokeThickness" format="dimension" />

        <attr name="drawItemSeparator" format="boolean" />
        <attr name="wheelItemSeparatorColor" format="color" />
        <attr name="itemSeparatorThickness" format="dimension" />

        <attr name="drawCenterPoint" format="boolean" />
        <attr name="centerPointColor" format="color" />
        <attr name="centerPointRadius" format="dimension" />

        <attr name="drawCornerPoints" format="boolean" />
        <attr name="cornerPointsEachSlice" format="integer" />
        <attr name="cornerPointsColor" format="color" />
        <attr name="useRandomCornerPointsColor" format="boolean" />
        <attr name="useCornerPointsGlowEffect" format="boolean" />
        <attr name="cornerPointsColorChangeSpeedMs" format="integer" />
        <attr name="cornerPointsRadius" format="dimension" />

        <attr name="textOrientation" format="enum">
            <enum name="HORIZONTAL" value="1" />
            <enum name="VERTICAL" value="2" />
            <enum name="VERTICAL_TO_CENTER" value="3" />
            <enum name="VERTICAL_TO_CORNER" value="4" />
        </attr>
        <attr name="textPadding" format="dimension" />
        <attr name="textSize" format="dimension" />
        <attr name="letterSpacing" format="float" />
        <attr name="textFont" format="reference" />
        <attr name="textPositionFraction" format="float" />

        <attr name="iconPosition" format="float" />
        <attr name="iconSizeMultiplier" format="float" />

    </declare-styleable>
</resources>